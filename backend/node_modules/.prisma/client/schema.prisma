generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Or your database type (e.g., "mysql" or "sqlite")
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}

model Wallet {
  id      Int     @id @default(autoincrement())
  userId  Int
  balance Float
  user    User    @relation(fields: [userId], references: [id])
}

model Transaction {
  id         Int     @id @default(autoincrement())
  walletId   Int
  type       String
  amount     Float
  category   String
  wallet     Wallet  @relation(fields: [walletId], references: [id])
}
